<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <script src="/js/admin.js"></script>
</head>
<body>
    <div class="container">
        <!-- Navigation -->
        <%- include('../components/navBarAdmin') %>
        <div class="navigation">
            <ul>
                <div class="logo-div">
                    <img src="/images/Logo.png" class="image-logo" onclick="window.location.href='/'" style="cursor: pointer;">
                    <p class="logo" onclick="window.location.href='/'" style="cursor: pointer;">Travelo</p>
                </div>
                <li>
                    <a href="#">
                        <span class="icon"><i class="fa-solid fa-users"></i></span>
                        <span class="title">Users</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon"><i class="fa-solid fa-chart-simple"></i></span>
                        <span class="title">Statistics</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon"><i class="fa-solid fa-question"></i></span>
                        <span class="title">Pending Questions</span>
                    </a>
                </li>
                <li>
                    <a href="/logout">
                        <span class="icon"><i class="fa-solid fa-right-from-bracket"></i></span>
                        <span class="title">Log Out</span>
                    </a>
                </li>
            </ul>
        </div>
        
        <!-- Content -->
        <div class="main">
            <div class="cardBox">
                <!-- Example Cards -->
                <div class="card">
                    <div>
                        <div class="numbers">1,115</div>
                        <div class="cardName">Daily Views</div>
                    </div>
                    <div class="iconBox"><i class="fa-solid fa-eye"></i></div>
                </div>
                <div class="card">
                    <div>
                        <div class="numbers">80</div>
                        <div class="cardName">Plans Generated</div>
                    </div>
                    <div class="iconBox"><i class="fa-solid fa-map-location-dot"></i></div>
                </div>
                <div class="card">
                    <div>
                        <div class="numbers">29</div>
                        <div class="cardName">Reviews</div>
                    </div>
                    <div class="iconBox"><i class="fa-solid fa-comments"></i></div>
                </div>
                <div class="card">
                    <div>
                        <div class="numbers">$7,416</div>
                        <div class="cardName">Earning</div>
                    </div>
                    <div class="iconBox"><i class="fa-solid fa-money-bills"></i></div>
                </div>
            </div>
            <!-- Users Table -->
            <div class="details">
                <div class="users">
                    <div class="cardHeader">
                        <h2>Customers</h2>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Avatar</th>
                                <th>Name</th>
                                <th>Nationality</th>
                                <th>Gender</th>
                                <th>Subscription</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users && users.length > 0) { %>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td><img class="avatars" src="<%= user.avatar %>" alt="Avatar"></td>
                                        <td><%= user.username %></td>
                                        <td><%= user.nationality %></td>
                                        <td><%= user.sex %></td>
                                        <td><span class="<%= user.isAdmin ? 'admin' : 'user' %>"><%= user.isAdmin ? 'Admin' : 'User' %></span></td>
                                        <td>
                                            <button class="btn edit-btn" data-id="<%= user._id %>">Edit</button>
                                            <button class="btn delete-btn" data-id="<%= user._id %>">Delete</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6">No users found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
     <!-- Edit User Modal -->
<div id="details-container2" class="modal">
    <div class="modal-content">
      <span id="close-btn2" class="close">&times;</span>
      <form id="edit-form">
        <h2>Edit User</h2>
        <input type="hidden" name="id" id="edit-id">
        <label for="name">Name:</label>
        <input type="text" name="name" id="edit-name" required>
        <label for="nationality">Nationality:</label>
        <input type="text" name="nationality" id="edit-nationality" required>
        <label for="gender">Gender:</label>
        <input type="text" name="gender" id="edit-gender" required>
        <label for="subscription">Subscription:</label>
        <select name="subscription" id="edit-subscription" required>
          <option value="user">User</option>
          <option value="admin">Admin</option>
        </select>
        <button type="submit">Save</button>
      </form>
    </div>
  </div>
  

</body>
</html>
