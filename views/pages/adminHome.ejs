<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <script src="/js/admin.js" defer></script>
</head>
<body>
    <div class="container">
        <!-- Navigation -->
        <%- include('../components/navBarAdmin') %>
        
        
        <!-- Content -->
        <div class="main">
           
            <!-- Users Table -->
            <div class="details">
                <div class="users">
                    <div class="cardHeader">
                        <h2>Customers</h2>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Avatar</th>
                                <th>Name</th>
                                <th>Nationality</th>
                                <th>Gender</th>
                                <th>Subscription</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users && users.length > 0) { %>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td><img class="avatars" src="<%= user.avatar %>" alt="Avatar"></td>
                                        <td><%= user.username %></td>
                                        <td><%= user.nationality %></td>
                                        <td><%= user.sex %></td>
                                        <td><span class="<%= user.isAdmin ? 'admin' : 'user' %>"><%= user.isAdmin ? 'Admin' : 'User' %></span></td>
                                        <td>
                                            <button class="btn edit-btn" data-id="<%= user._id %>">Edit</button>
                                            <button class="btn delete-btn" data-id="<%= user._id %>">Delete</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6">No users found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

  <!-- Confirmation Modal -->
<div id="details-container" class="modal">
    <div class="modal-content">
        <span id="close-btn" class="close">&times;</span>
        <p>Are you sure you want to delete this user?</p>
        <button id="yes-btn">Yes</button>
        <button id="no-btn">No</button>
    </div>
</div>

<!-- Edit User Modal -->
<div id="details-container2" class="modal">
    <div class="modal-content">
        <span id="close-btn2" class="close">&times;</span>
        <form id="edit-form">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <label for="nationality">Nationality:</label>
            <input type="text" id="nationality" name="nationality" required>
            <label for="gender">Gender:</label>
            <input type="text" id="gender" name="gender" required>
            <label for="subscription">Subscription:</label>
            <select id="subscription" name="subscription" required>
                <option value="admin">Admin</option>
                <option value="user">User</option>
            </select>
            <button type="submit">Save Changes</button>
        </form>
    </div>
</div>



</body>
</html>

