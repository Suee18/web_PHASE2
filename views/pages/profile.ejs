<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css'>
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
  <header>
    <div id="NavbarLoggedin_call"></div>
  </header>
  <div class="main-container">
    <section>
      <div class="rt-container">
        <div class="col-rt-12">
          <div class="Scriptcontent">
            <!-- Profile -->
            <div class="profilee py-4">
              <div class="container">
                <div class="row">
                  <div class="card shadow-sm">
                    <div class="card-header bg-transparent text-center">
                      <div class="aboveAll">
                        <div id="avatar-display" class="avatar-container">
                          <img src="<%= user.avatar %>" alt="Profile Avatar" style="width: 100px; height: 100px;">
                        </div>
                        <button class="tooltip" onclick="fetchAvatars()">Change Avatar</button>
                        <h3><%= user.username %></h3>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-8">
                    <div class="card shadow-sm">
                      <div class="card-header bg-transparent border-0">
                        <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                      </div>
                      <div class="card-body pt-0">
                        <table class="table table-bordered">
                          <tr id="age">
                            <th width="30%">Age</th>
                            <td width="2%">:</td>
                            <td><%= new Date().getFullYear() - new Date(user.birthday).getFullYear() %></td>
                          </tr>
                          <tr id="gender">
                            <th width="30%">Gender</th>
                            <td width="2%">:</td>
                            <td><%= user.sex %></td>
                          </tr>
                          <tr id="nationality">
                            <th width="30%">Nationality</th>
                            <td width="2%">:</td>
                            <td><%= user.nationality %></td>
                          </tr>
                          <tr id="email">
                            <th width="30%">e-mail</th>
                            <td width="2%">:</td>
                            <td><%= user.email %></td>
                          </tr>
                        </table>
                      </div>
                    </div>
                    <div style="height: 1em"></div>
                    <div class="buttons">
                      <button onclick="editProfile()" type="button" class="btn">Edit Profile</button>
                      <button onclick="saveProfile()" type="button" class="btn btn-primary" disabled>Save Changes</button>
                      <button type="button" class="btn">Change Password</button>
                      <button type="button" class="btn">Delete Profile</button>
                    </div>
                    <div id="avatars-container" style="display: none;">
                      <!-- Avatars will be displayed here -->
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

  </div> <!-- Closing main-container -->

  <script src="/js/profile.js"></script>
  <script src="/navBar_loggedin/navBarLoggedin.js"></script>
  <script>
    function fetchAvatars() {
      fetch('/avatars')
        .then(response => response.json())
        .then(data => {
          const avatarsContainer = document.getElementById('avatars-container');
          avatarsContainer.innerHTML = '';
          data.forEach(avatar => {
            const img = document.createElement('img');
            img.src = avatar.avatarUrl;
            img.style.width = '100px';
            img.style.height = '100px';
            img.onclick = () => selectAvatar(avatar.avatarUrl);
            avatarsContainer.appendChild(img);
          });
          avatarsContainer.style.display = 'block';
        });
    }

    function selectAvatar(avatarUrl) {
      fetch('/update-avatar', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ avatarUrl })
      })
      .then(response => response.text())
      .then(message => {
        console.log(message);
        document.getElementById('avatar-display').innerHTML = `<img src="${avatarUrl}" alt="Profile Avatar" style="width: 100px; height: 100px;">`;
        document.getElementById('avatars-container').style.display = 'none';
      });
    }
  </script>
</body>
</html>
